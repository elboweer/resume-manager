{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('create_company') }}" class="btn btn-lg btn-rounded btn-warning">{% trans %}entity.company.__create{% endtrans %}</a>

    <section class="main--content">
        <div class="panel">
            <div class="records--list" data-title="{% trans %}entity.company.__index{% endtrans %}">
                <table id="recordsListView">
                    <thead>
                    <tr>
                        <th>
                            {% trans %}entity.company.title{% endtrans %}
                        </th>
                        <th>
                            {% trans %}entity.company.site{% endtrans %}
                        </th>
                        <th>
                            {% trans %}entity.company.address{% endtrans %}
                        </th>
                        <th class="not-sortable"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for company in companies %}
                        <tr>
                            <td>
                                <p class="btn-link">{{ company.title }}</p>
                            </td>
                            <td>
                                <p class="btn-link">{{ company.site }}</p>
                            </td>
                            <td>
                                <p class="btn-link">{{ company.address }}</p>
                            </td>
                            <td>
                                <div class="dropleft">
                                    <a href="#" class="btn-link" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu">
                                        <a href="{{ path('edit_company', { 'companyID': company.id } ) }}"
                                           class="dropdown-item">{% trans %}action.button.edit{% endtrans %}</a>
                                        <a href="{{ path('delete_company', { 'companyID': company.id } ) }}"
                                           class="dropdown-item remove-item">{% trans %}action.button.delete{% endtrans %}</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}