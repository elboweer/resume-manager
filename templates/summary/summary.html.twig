{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <a href="{{ path('statistic_summary', { 'summaryID': summary.id }) }}" class="btn btn-lg btn-rounded btn-warning">{% trans %}entity.feedback.statistic{% endtrans %}</a>

    {% if action == 'update' %}
            {{ render(controller(
                'App\\Controller\\FeedbackController::feedbackWidget',
                { 'summaryID': summary.id }
            )) }}

    {% endif %}

    <section class="main--content">
        <div class="panel">
            <div class="records--body">
                <div class="title">
                    <h6 class="h6">{% trans %}entity.summary.__editor{% endtrans %}</h6>
                </div>
                <div class="tab-content">

                    {{ form_start(form) }}

                    {{ form_widget(form) }}

                    <input value="Сохранить" type="submit" class="btn btn-submit btn-sm btn-rounded">

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </section>
{% endblock %}